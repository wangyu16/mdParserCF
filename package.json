{
  "name": "mdparser-cf",
  "version": "1.0.0",
  "description": "Advanced Markdown parser with math formulas, tables, footnotes, custom containers, and more. Optimized for Cloudflare Workers and edge computing.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./parser": {
      "types": "./dist/parser/parser.d.ts",
      "import": "./dist/parser/parser.js"
    },
    "./renderer": {
      "types": "./dist/renderer/html-renderer.d.ts",
      "import": "./dist/renderer/html-renderer.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:wrangler": "wrangler dev",
    "build": "tsc && vite build",
    "build:worker": "node build-worker.mjs",
    "prepublishOnly": "npm run build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts' '*.md'",
    "type-check": "tsc --noEmit",
    "deploy": "npm run build:worker && wrangler deploy",
    "deploy:staging": "npm run build:worker && wrangler deploy --env staging"
  },
  "keywords": [
    "markdown",
    "parser",
    "html",
    "markdown-parser",
    "markdown-renderer",
    "katex",
    "math",
    "latex",
    "mhchem",
    "chemistry",
    "tables",
    "footnotes",
    "cloudflare",
    "workers",
    "edge",
    "serverless",
    "gfm",
    "github-flavored-markdown"
  ],
  "author": "wangyu16",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/katex": "^0.16.7",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^2.0.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "katex": "^0.16.25",
    "smiles-drawer": "^2.1.7"
  },
  "peerDependencies": {
    "highlight.js": "^11.8.0"
  },
  "peerDependenciesMeta": {
    "highlight.js": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wangyu16/mdParserCF.git"
  },
  "bugs": {
    "url": "https://github.com/wangyu16/mdParserCF/issues"
  },
  "homepage": "https://github.com/wangyu16/mdParserCF#readme"
}
