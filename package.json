{
  "name": "mdparser-cf",
  "version": "0.0.1",
  "description": "Customizable Markdown parser for Cloudflare Workers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:wrangler": "wrangler dev",
    "build": "tsc && vite build",
    "build:worker": "node build-worker.mjs",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts' '*.md'",
    "type-check": "tsc --noEmit",
    "deploy": "npm run build:worker && wrangler deploy",
    "deploy:staging": "npm run build:worker && wrangler deploy --env staging"
  },
  "keywords": [
    "markdown",
    "parser",
    "cloudflare",
    "workers",
    "html"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/katex": "^0.16.7",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^2.0.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "katex": "^0.16.25",
    "smiles-drawer": "^2.1.7",
    "wrangler": "^3.0.0"
  },
  "optionalDependencies": {
    "highlight.js": "^11.8.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wangyu16/mdParserCF.git"
  }
}
