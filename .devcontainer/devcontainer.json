{
  "name": "Markdown Parser CF Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "containerEnv": {
    "NODE_ENV": "development",
    "LOG_LEVEL": "debug"
  },
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${containerWorkspaceFolder}"
  },
  "forwardPorts": [8787, 3000, 5173],
  "portsAttributes": {
    "8787": {
      "label": "Cloudflare Worker (Wrangler)",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Local Dev Server",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Preview Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.makefile-tools",
        "gitpod.gitpod-desktop",
        "GitHub.copilot",
        "GitHub.vscode-pull-request-github",
        "ms-vscode-remote.remote-explorer",
        "eamodio.gitlens",
        "christian-kohler.path-intellisense",
        "streetsidesoftware.code-spell-checker",
        "vitest.explorer",
        "ms-vscode.live-server",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-typescript-next"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true
        },
        "eslint.validate": [
          "javascript",
          "typescript",
          "markdown"
        ],
        "files.exclude": {
          "node_modules": true,
          ".git": true,
          "dist": false,
          "build": false
        },
        "search.exclude": {
          "node_modules": true,
          ".git": true,
          "dist": true,
          "build": true
        },
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        }
      }
    }
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/node/.ssh,readonly",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/node/.gitconfig,readonly"
  ],
  "remoteUser": "node",
  "updateRemoteUserUID": true
}
